                <ListBoxItem>URL3</ListBoxItem>
                <ListBoxItem>URL1</ListBoxItem>
                <ListBoxItem>URL2</ListBoxItem>
                <ListBoxItem>URL3</ListBoxItem>
            </ListBox>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="1">
            <Border BorderBrush="Black" BorderThickness="1" Width="1280" Height="720" Background="Black"/>

        </StackPanel>

        <StackPanel Grid.ColumnSpan="2" Grid.Row="2" Background="#c4fb6d"/>

    </Grid>
</Window>
